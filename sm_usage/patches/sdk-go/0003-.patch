+		if opts == nil {
+			return nil, errors.New("Invalid opts parameter. It must not be nil.")
+		}
+
+		sm2K := k
+
+		switch opts.(type) {
+		// Re-randomized an ECDSA private key
+		case *bccsp.SM2ReRandKeyOpts:
+			reRandOpts := opts.(*bccsp.SM2ReRandKeyOpts)
